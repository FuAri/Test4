<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Mapper.MajorMapper">
    <select id="findMajorById" resultType="major" parameterType="String">
        select * from tb_major where major_id = #{id}
    </select>

<!--    添加一个-->
    <insert id="addMajor" parameterType="major">
        insert into tb_major (major_id,major_name,tuition,dept_id) values (#{majorId},#{majorName},#{tuition},#{deptId})
    </insert>
    <update id="updateMajor" parameterType="major">
        update tb_major set major_name=#{majorName},tuition=#{tuition},dept_id=#{deptId} where major_id=#{majorId}
    </update>
    <delete id="deleteMajor" parameterType="Integer">
        delete  from tb_major where major_id=#{majorId}
    </delete>
</mapper>

